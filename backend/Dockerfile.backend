# /backend/Dockerfile.backend
FROM node:18-alpine

# Use /app as the working directory
WORKDIR /app

# Copy package files and install dependencies (native modules will build for Alpine)
COPY package*.json ./
RUN npm install

# Copy the rest of your application code.
COPY . .

# Expose the backend port.
EXPOSE 5000

# Run the development script (ensure you have one in package.json, e.g., using nodemon)
CMD ["npm", "start"]
